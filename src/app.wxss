view,
button,
input,
text,
icon {
  box-sizing: border-box;
}

page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  font-size: 14px;
  background-color: #f5f5f5;
} 

.flex-middle {
  display: flex;
  align-items: center;
}

.flex-unit {
  flex: 1;
}