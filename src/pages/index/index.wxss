.container {
  position: relative;
}

.project-item,
.add-project-item {
  display: flex;
  padding: 0 24px;
  height: 48px;
  align-items: center;
}

.project-item:active {
  background-color: #a7e1c4;
}

.project-todos-count {
  font-size: 12px;
  color: #666;
}

.add-project-item {
  color: #49a9ee;
}

.add-project-item:active {
  color: #108ee9;
}

.list-item-icon {
  width: 14px;
  height: 14px;
  margin-right: 12px;
}

.float-action-btn {
  position: absolute;
  bottom: 24px;
  left: 50%;
  padding: 15px;
  width: 60px;
  height: 60px;
  border-radius: 100%;
  transform: translateX(-50%);
  background-color: #49a9ee;
  box-shadow: rgba(0, 0, 0, 0.1) 0 1px 2px;
}

.float-action-btn:active {
  background-color: #108ee9;
}

.float-action-btn image {
  width: 100%;
  height: 100%;
}